{
    "compilerOptions": {
      "target": "ES6",
      "lib": ["DOM", "ES6"],
      "module": "ESNext",
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "baseUrl": "src",
      "paths": {
        "@styles/*": ["styles/*"],
        "@components/*": ["components/*"],
        "@pages/*": ["pages/*"],
        "@app/*": ["app/*"],
        "@assets/*": ["assets/*"],
        "@ui/*": ["ui/*"],
        "@data/*": ["data/*"],
        "@features/*": ["features/*"],
      }
    },
    "include": ["src", "src/types"]
  }
